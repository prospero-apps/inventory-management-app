extends layout

block content
  h1.main= title

  form.create-form(method='POST' action='' enctype="multipart/form-data")
    div.form-group
      label(for='name') Name:
      input#name.form-control(type='text', placeholder='Name of plant' name='name' required='true' value=(undefined===plant ? '' : plant.name) )    
    div.form-group
      label(for='description') Description:
      textarea#description.form-control(rows='5' name='description' required='true') #{undefined===plant ? '' : plant.description}
    div.form-group
      label(for='price') Price:
      input#price.form-control(type='text', placeholder='44.99' name='price' value=(undefined===plant ? '' : plant.price) required='true')
    div.form-group
      label(for='stock') Stock:
      input#stock.form-control(type='number', placeholder='28' name='stock' value=(undefined===plant ? '' : plant.stock) required='true')
    
    div.form-group
      label(for='image') Image:
      input#image.form-control(type='file', name='image')
   
    div.form-group
      label Category:
      div
        for category in categories
          div(style='display: inline; padding-right:10px;')
            input.checkbox-input(type='checkbox', name='category', id=category._id, value=category._id, checked=category.checked )
            label(for=category._id) #{category.name}
    button.btn.btn-primary(type='submit') Submit

  

  if errors
    ul
      for error in errors
        li!= error.msg
