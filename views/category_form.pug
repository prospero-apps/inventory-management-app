extends layout

block content
  h1.main #{title}

  form.create-form(method='POST' action='')
    div.form-group
      label(for='name') Category Name:
      input#name.form-control(type='text', placeholder='Evergreens, Ferns, etc.' name='name' value=(undefined===category ? '' : category.name))
    div.form-group
      label(for='description') Description:
      textarea#description.form-control(rows='5' name='description')= undefined===category ? '' : category.description
    button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg
